<Window x:Class="CostControl.Views.InputNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CostControl.Views"
        mc:Ignorable="d"
        Title="InputNameWindow" Height="150" Width="300" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="18*"/>
            <RowDefinition Height="63*"/>
            <RowDefinition Height="29*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Введите название" Grid.Row="1" Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="76,1,84,1" Width="132"/>
        <TextBox HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Name}" VerticalAlignment="Top" Width="225" Grid.Row="2" Margin="35,27,0,0"/>
        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Center" Background="Transparent">
            <Button Command="{Binding Path=OkCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}" Margin="0,0,10,5">Сохранить</Button>
            <Button IsCancel="True" Margin="10,0,0,5">Отменить</Button>
        </StackPanel>
    </Grid>
</Window>
